<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsw.summercloud.task.mapper.TaskJobRecordMapper">
    <resultMap id="BaseResultMap" type="com.wsw.summercloud.task.entities.TaskJobRecordEntity">
        <id column="record_id" jdbcType="BIGINT" property="recordId"/>
        <result column="job_id" jdbcType="BIGINT" property="jobId"/>
        <result column="resource_id" jdbcType="BIGINT" property="resourceId"/>
        <result column="job_status" jdbcType="INTEGER" property="jobStatus"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
        <result column="created_time" jdbcType="TIMESTAMP" property="createdTime"/>
        <result column="updated_time" jdbcType="TIMESTAMP" property="updatedTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        record_id,
        job_id,
        resource_id,
        job_status,
        is_delete,
        created_time,
        updated_time
    </sql>

    <insert id="insertTaskJobRecords" parameterType="java.util.List">
        insert into task_job_record(record_id, job_id, resource_id, job_status, is_delete, created_time, updated_time)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.recordId}, #{item.jobId}, #{item.resourceId}, #{item.jobStatus}, 0, NOW(), NOW())
        </foreach>
    </insert>

</mapper>
