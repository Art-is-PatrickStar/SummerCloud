<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsw.summercloud.user.mapper.UserInfoMapper">
    <resultMap id="BaseResultMap" type="com.wsw.summercloud.user.entities.UserInfoEntity">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="is_delete" jdbcType="INTEGER" property="isDelete"/>
        <result column="created_time" jdbcType="TIMESTAMP" property="createdTime"/>
        <result column="updated_time" jdbcType="TIMESTAMP" property="updatedTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        id
        ,
        username,
        password,
        email,
        is_delete,
        created_time,
        updated_time
    </sql>

    <select id="getUserByNameOrEmailAndPassword" parameterType="com.wsw.summercloud.api.dto.UserLoginRequestDto"
            resultType="com.wsw.summercloud.user.entities.UserInfoEntity">
        select
        <include refid="Base_Column_List"/>
        from user_info
        <where>
            <if test="request.username != null and request.username != ''">
                and username = #{request.username}
            </if>
            <if test="request.email != null and request.email != ''">
                or email = #{request.email}
            </if>
            <if test="request.password != null and request.password != ''">
                and password = #{request.password}
            </if>
        </where>
    </select>
</mapper>